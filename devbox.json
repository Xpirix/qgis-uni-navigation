{
  "packages": [
    "nodejs@latest",
    "nodePackages.pnpm@latest"
  ],
  "shell": {
    "init_hook": [
      "pnpm i"
    ],
    "scripts": {
      "dev": [
        "pnpm run dev"
      ],
      "build": [
        "pnpm run build \"$@\""
      ],
      "preview": [
        "pnpm run preview"
      ],
      "deploy": [
        "pnpm run deploy"
      ]
    }
  }
}